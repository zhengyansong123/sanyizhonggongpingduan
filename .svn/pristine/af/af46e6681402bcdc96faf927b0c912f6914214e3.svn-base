page {
  background-color: #f8f8f8;
  height: 100%;
}

.c-state1 {
  transform: rotate(0deg) scale(1) translate(75%, 0%);
  -webkit-transform: rotate(0deg) scale(1) translate(75%, 0%);
}

.page-body-item {
  margin-top: 4rpx;
  height: 98rpx;
  background-color: white;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
}

/* 字对齐 */

.p {
  color: #666;
}

.p1 {
  text-indent: 20rpx;
}

.p2 {
  text-indent: 25rpx;
}

.p3 {
  text-indent: 21rpx;
}

.p4 {
  text-indent: 31rpx;
}

.p5 {
  text-indent: 22rpx;
}

.p6 {
  text-indent: 23rpx;
}

/**index.wxss**/

.border {
  padding: 5rpx;
  border: 3rpx solid #fff;
  border-radius: 50%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 5rpx;
  border-radius: 50%;
  overflow: hidden;
  /* background-color: rgb(184, 175, 175); */
  background-image: url(https://api.znpoo.com/wxPicture/avatar2.png);
  background-size: 100%;
}

.userinfo-nickname {
  color: white;
  font-size: 14px;
}

.usermotto {
  margin-top: 200px;
  font-size: 40rpx;
}

.iconClass {
  width: 40rpx;
  padding-right: 25rpx;
}

.content {
  width: 100%;
  height: 315rpx;
  /* background-color: #ff8b00; */
  text-align: center;
  padding-top: 30rpx;
  background-image: url('https://api.znpoo.com/wxPicture/my_head_bg.png');
  background-size: 100% 170%;
  margin-bottom: 4rpx;
}

.zhoupeilong {
  width: 90px;
  font-size: 11px;
  height: 65rpx;
  background-color: #fff;
  color: #ff8b00;
  margin-top: 5px;
  border: 2px solid #ffdcb2;
  border-radius: 45rpx;
  line-height: 65rpx;
}

button::after {
  border: none;
}

.routing {
  text-align: center;
}

.routing image {
  margin-top: 20rpx;
  height: 80rpx;
  width: 270rpx;
}

.moreImg {
  width: 50rpx;
  height: 50rpx;
  margin-left: 430rpx;
}
