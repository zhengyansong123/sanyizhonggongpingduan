/* pages/index/Component/FormM/FormM.wxss */
@import '../../../../component/model/model.wxss';

page {
  /* background-color: #ffcc99;  */
  height: 100%;
}

wx-button {
  margin-top: 46rpx;
  margin-bottom: 20rpx;
}

/* 上半部分的图 */

.pic-top {
  height: 100%;
}

.picker-text {
  margin-left: 20rpx;
  position: relative;
}

.lineView {
  margin-top: 1px;
  margin-left: 80px;
  margin-right: 80px;
  height: 1px;
  background-color: darkred;
}

.picker {
  padding: 26rpx;
  background-color: #fff;
}

.viewTitle {
  margin-top: 20px;
  margin-bottom: 30px;
  height: 40px;
  text-align: center;
  font-weight: bold;
  font-size: 50rpx;
}

/* 类型选择按钮 */

.type {
  display: flex;
  justify-content: space-between;
  width: 71%;
  margin-left: 99rpx;
  margin-top: -45rpx;
}

/* 清除button默认样式 */

button::after {
  border: none;
}

.type button {
  height: 60rpx;
  border-radius: 28rpx;
  width: 192rpx;
  color: #daa979;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}

/* 选择类型后 */

.type .type_select {
  background: #fff;
  color: #ff6b00;
  border: 2rpx solid #ff7414;
}

.form-body {
  font-size: 30rpx;
  color: #763a00;
}

.section {
  margin-bottom: 10rpx;
}

.section input {
  margin-left: 146rpx;
  margin-right: 25rpx;
  padding-left: 40rpx;
  border: 1px solid #763a00;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  width: 374rpx;
}

.section_gap {
  padding: 0 30rpx;
  margin-top: -40rpx;
}

.section__title {
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-weight: bold;
  text-align: center;
}

.section_gap .section__title {
  padding-left: 0;
  padding-right: 0;
}

.btn-area {
  margin-left: 25rpx;
  margin-right: 25rpx;
}

.btn-area button {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  width: 414rpx;
  border-radius: 50rpx;
  color: white;
  background: -webkit-linear-gradient(left, #ff7200, #ff8b00); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #ff7200, #ff8b00); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #ff7200, #ff8b00); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #ff7200, #ff8b00); /* 标准的语法（必须放在最后） */
}

.img {
  width: 100%;
  /* height: 2000rpx; */
}

/* 欢迎加盟*/

.form-title {
  width: 100%;
  height: 124rpx;
}

.form-title_pic {
  width: 284rpx;
  height: 50rpx;
  margin-left: 214rpx;
  margin-top: 20rpx;
}

.form-bg {
  background: -webkit-linear-gradient(left, #eb763b, #f19c36); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #eb763b, #f19c36); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #eb763b, #f19c36); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #eb763b, #f19c36); /* 标准的语法（必须放在最后） */
  padding-top: 109rpx;
  height: 80%;
}

.form {
  margin-top: 8rpx;
  margin-right: 30rpx;
  margin-left: 30rpx;
  background-color: white;
  border-radius: 26rpx;
  height: 95%;
}

/* 先生女士的选择 */

.checkname {
  position: absolute;
  width: 48%;
  left: 204rpx;
  z-index: 10;
  background: #e8e8e8;
  border-radius: 20rpx;
  color: #DAA979;
  border-top:1rpx solid #fff;
  text-indent: 22rpx;
}

.checkname view:nth-child(1) {
  border-bottom: 1rpx solid #fff;
}
