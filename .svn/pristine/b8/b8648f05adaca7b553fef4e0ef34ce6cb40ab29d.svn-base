/* pages/billing/index.wxss */
.container{
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.bikeid{
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
}

.time{
  width: 100%;
  text-align: center;
}


.time-content{
  font-size: 66rpx;
}



.time-desc{
font-size: 24rpx;
}

.time-title text{
  font-size: 50rpx;
  color:#ff8b00;
  font-weight:bold;

}

.endride{
  width:460rpx;
margin-bottom:40rpx;

}

.endride button{
  margin-top: 40rpx;
  border-radius:44rpx;
line-height:80rpx;

}


.current-device{
  border:2rpx solid #949494;
width:486rpx;
height:68rpx;
display:flex;
align-items:center;
justify-content:center;
border-radius:15rpx;

}


.charging-img{
  width:422rpx;
  height: 422rpx;
}

.charging-img image{
  width:422rpx;
height:422rpx;

}