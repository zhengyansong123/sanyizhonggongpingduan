.container {
  background: #f8f8f8;
  color: #333;
}

.choose {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  padding-left: 40rpx;
}

.choose-grids {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 25rpx;
}
