/* pages/wallet/index.wxss */

.container {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  padding-top: 40rpx;
}

.overage {
  background-image: url(https://api.znpoo.com/wxPicture/walletBg.png);
  background-size: 100% 100%;
  width: 90%;
  border-radius: 30rpx;
  height: 30%;
  margin: 0 5%;
}

.overage .overage-header {
  font-size: 35rpx;
  color: #fff;
  padding-left: 30rpx;
  padding-top: 30rpx;
}

.overage .overage-content {
  display: block;
  line-height: 70rpx;
  font-size: 70rpx;
  font-weight: 800;
  color: #ff0101;
  padding-left: 30rpx;
}

.routing {
  display: flex;
  justify-content: space-between;
  margin-top: 75rpx;
  padding: 0 50rpx
}

.routing image {
  height: 95rpx;
  width: 210rpx;
}

.btn-charge {
  width: 75%;
  border-radius: 65rpx;
  margin-top: 20rpx;
  color: #fff;
  background: -webkit-linear-gradient(left, #ff7200, #ff8b00); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #ff7200, #ff8b00); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #ff7200, #ff8b00); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #ff7200, #ff8b00); /* 标准的语法（必须放在最后） */
}

.tapbar {
  display: flex;
  background-color: #fff;
  padding: 40rpx;
  align-items: center;
  justify-content: space-between;
  color: #8c8c8c;
  position: relative;
}

.tapbar image{
 height: 50rpx;
 width: 50rpx;
 margin-right: 15rpx;
}

.img{
  position: absolute;
}

.tapbar text{
 margin-left: 80rpx;
}
